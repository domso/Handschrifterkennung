\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemefai}

\mode<presentation>

\setbeamercolor*{frametitle}{parent=palette primary}
\setbeamercolor*{unisiegel}{parent=structure}
\setbeamercolor*{unilogo}{parent=palette secondary}
\setbeamercolor*{date in head/foot}{parent = structure}
\setbeamercolor*{title in head/foot}{parent = palette primary}

\setbeamercolor{structure}{fg=black,bg=white}

%% Frametitle
\setbeamercolor*{palette primary}{use=structure,fg=white,bg=faigreen}
%% Talk title in foot
\setbeamercolor*{palette secondary}{fg=white,bg=silver}
%% Head+Author
\setbeamercolor*{palette tertiary}{fg=white,bg=red}
%% Page Numbering
\setbeamercolor*{palette quaternary}{fg=white,bg=blue}

\mode<all>
